<!DOCTYPE html>
<html>
  <head>
    <title>ذاتية القسم | <%= @page_title || "Admin" %></title>
    <%= stylesheet_link_tag('application', :media => 'all') %>
    <%= javascript_include_tag('application') %>
    <style>
      .modal-header, h4, .close {
          background-color: #5cb85c;
          color:white !important;
          text-align: center;
          font-size: 30px;
          
      }
      .modal-footer {
          background-color: #f9f9f9;
      }
      
    </style>
  </head>
  <body>
    <div id="header">
      <h1>ذاتية القسم</h1>
    </div>
    <div id="main" >
      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div id="content" class="content-div">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; C.D   /  Dakar</p>
    </div>
  </body>
</html>
